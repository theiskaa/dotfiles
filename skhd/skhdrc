# focus window
shift + cmd - h : yabai -m window --focus west
shift + cmd - j : yabai -m window --focus south
shift + cmd - k : yabai -m window --focus north
shift + cmd - l : yabai -m window --focus east

# move managed window
shift + ctrl - h : yabai -m window --warp west
shift + ctrl - j : yabai -m window --warp south
shift + ctrl - k : yabai -m window --warp north
shift + ctrl - l : yabai -m window --warp east

# rotate tree
cmd + shift - r : yabai -m space --rotate 90

# toggle window fullscreen zoom
shift + cmd - f : yabai -m window --toggle zoom-fullscreen

# toggle padding and gap
cmd - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# float / unfloat window and center on screen
# cmd - t : yabai -m window --toggle float;\
#           yabai -m window --grid 4:4:1:1:2:2

# toggle window split type
cmd - e : yabai -m window --toggle split

# balance size of windows
shift + cmd - 0 : yabai -m space --balance

# fast focus desktop
shift - tab : yabai -m space --focus recent

# send window to monitor and follow focus
shift + cmd - m : yabai -m window --display next; yabai -m display --focus next
